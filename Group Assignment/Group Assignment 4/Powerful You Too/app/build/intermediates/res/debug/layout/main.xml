   <RelativeLayout
       xmlns:android="http://schemas.android.com/apk/res/android"
       android:orientation="vertical"
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:background="@drawable/powerful"
    android:gravity="center|center_horizontal">


    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/layout">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text=""
            android:id="@+id/health"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="100dp"
            android:textSize="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:onClick="health"
            android:textStyle="normal"
            android:background="@drawable/powerfulyou" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text=""
            android:id="@+id/emergency"
            android:layout_marginRight="100dp"
            android:textSize="40dp"
            android:layout_above="@+id/medical"
            android:layout_alignParentRight="true"
            android:onClick="emergency"
            android:background="@drawable/powerfu_team" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text=""
            android:id="@+id/medical"
            android:layout_marginTop="50dp"
            android:textSize="40dp"
            android:layout_below="@+id/health"
            android:layout_alignLeft="@+id/health"
            android:background="@drawable/cuttingedge"
            android:onClick="medical"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/strength"
            android:textSize="40dp"
            android:onClick="strength"
            android:background="@drawable/powerfulpulse"
            android:layout_alignTop="@+id/medical"
            android:layout_alignLeft="@+id/emergency" />

        <!---<TextView
            android:layout_width="fill_parent"
