<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Cutting Edge"
            android:id="@+id/medical"
            android:textSize="90dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ff030303"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:background="#66ffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=" There are thousands of people that visit the hospital yearly for surgeries and checkups. With the advent of progressive technology in the medical field, the world has seen instrumental advances in the care of others around the globe!"
            android:id="@+id/medicaldesc"
            android:textIsSelectable="false"
            android:textColor="#ff060606"
            android:textSize="35dp"
            android:gravity="center_horizontal"
            android:layout_below="@+id/medical"
            android:layout_alignParentLeft="true"
            android:background="#73ffffff"
            android:padding="10dp" />
        <Button
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:id="@+id/medicaltools"
            android:textSize="35dp"
            android:onClick="medicaltools"
            android:layout_below="@+id/medicaldesc"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="150dp"
            android:background="@drawable/medicalimaging"
            android:padding="15dp" />
        <Button
            android:layout_width="250dp"
            android:layout_height="130dp"
            android:id="@+id/robotsurgery"
            android:textSize="35dp"
            android:onClick="robotsurgery"
            android:background="@drawable/robot_surgery"
            android:padding="15dp"
            android:layout_below="@+id/medicaltools"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>
</RelativeLayout><!-- From: file:/C:/Users/bjoseph/Documents/GitHub/Powerful-You/Group%20Assignment/Group%20Assignment%204/Powerful%20You%20Too/app/src/main/res/layout/medical.xml -->